# BrainSAIT Suite Environment Configuration

# =====================================================
# GOOGLE GEMINI API
# =====================================================
GEMINI_API_KEY=your_gemini_api_key_here

# =====================================================
# DATABASE
# =====================================================
DATABASE_URL=postgresql://user:password@localhost:5432/brainsait
POSTGRES_USER=brainsait
POSTGRES_PASSWORD=changeme
POSTGRES_DB=brainsait

# =====================================================
# REDIS
# =====================================================
REDIS_URL=redis://localhost:6379

# =====================================================
# AUTHENTICATION
# =====================================================
# Firebase or Auth0
AUTH_PROVIDER=firebase
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_PRIVATE_KEY=your_private_key

# OAuth2
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret

# =====================================================
# STORAGE
# =====================================================
# Google Cloud Storage or S3
STORAGE_PROVIDER=gcs
GCS_BUCKET_NAME=brainsait-storage
GCS_PROJECT_ID=your_project_id

# S3 Alternative
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=brainsait-storage
AWS_REGION=us-east-1

# =====================================================
# API CONFIGURATION
# =====================================================
API_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
API_SECRET_KEY=your_secret_key_min_32_chars

# =====================================================
# FEATURE FLAGS
# =====================================================
ENABLE_RAG=true
ENABLE_FILE_SEARCH=true
ENABLE_VOICE_ASSISTANT=true
ENABLE_VIDEO_GENERATION=true

# =====================================================
# COMPLIANCE & SECURITY
# =====================================================
ENABLE_AUDIT_LOGGING=true
PDPL_COMPLIANCE_MODE=true
HIPAA_COMPLIANCE_MODE=true
ENCRYPTION_KEY=your_encryption_key_32_chars

# =====================================================
# LOCALIZATION
# =====================================================
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en
DEFAULT_CULTURAL_CONTEXT=saudi

# =====================================================
# MONITORING & OBSERVABILITY
# =====================================================
ENABLE_TELEMETRY=true
SENTRY_DSN=your_sentry_dsn
POSTHOG_API_KEY=your_posthog_key

# =====================================================
# PAYMENT
# =====================================================
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
ENABLE_MADA=true

# =====================================================
# ENVIRONMENT
# =====================================================
NODE_ENV=development
