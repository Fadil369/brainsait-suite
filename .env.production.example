# BrainSAIT Suite - Production Environment Configuration
# COPY THIS FILE TO .env.production AND UPDATE WITH REAL VALUES

# =====================================================
# GOOGLE GEMINI API
# =====================================================
GEMINI_API_KEY=your_production_gemini_api_key_here

# =====================================================
# DATABASE (Use Cloud SQL or managed PostgreSQL)
# =====================================================
DATABASE_URL=postgresql://user:password@prod-db-host:5432/brainsait_prod
POSTGRES_USER=brainsait_prod
POSTGRES_PASSWORD=GENERATE_STRONG_PASSWORD_HERE
POSTGRES_DB=brainsait_prod

# =====================================================
# REDIS (Use Cloud Memorystore or managed Redis)
# =====================================================
REDIS_URL=redis://prod-redis-host:6379/0

# =====================================================
# AUTHENTICATION (Firebase or Auth0)
# =====================================================
AUTH_PROVIDER=firebase
FIREBASE_PROJECT_ID=brainsait-prod
FIREBASE_CLIENT_EMAIL=service-account@brainsait-prod.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# OAuth2 (if using Auth0)
OAUTH_CLIENT_ID=your_prod_oauth_client_id
OAUTH_CLIENT_SECRET=your_prod_oauth_client_secret
OAUTH_DOMAIN=brainsait.auth0.com

# =====================================================
# STORAGE (Google Cloud Storage)
# =====================================================
STORAGE_PROVIDER=gcs
GCS_BUCKET_NAME=brainsait-prod-storage
GCS_PROJECT_ID=brainsait-prod
GCS_CREDENTIALS_JSON=/path/to/credentials.json

# Or AWS S3
AWS_ACCESS_KEY_ID=your_prod_access_key
AWS_SECRET_ACCESS_KEY=your_prod_secret_key
AWS_S3_BUCKET=brainsait-prod-storage
AWS_REGION=me-south-1

# =====================================================
# API CONFIGURATION
# =====================================================
API_URL=https://api.brainsait.com
NEXT_PUBLIC_API_URL=https://api.brainsait.com
API_SECRET_KEY=GENERATE_32_CHAR_SECRET_HERE
JWT_SECRET=GENERATE_DIFFERENT_32_CHAR_SECRET_HERE

# =====================================================
# CORS
# =====================================================
ALLOWED_ORIGINS=https://app.brainsait.com,https://www.brainsait.com

# =====================================================
# FEATURE FLAGS
# =====================================================
ENABLE_RAG=true
ENABLE_FILE_SEARCH=true
ENABLE_VOICE_ASSISTANT=true
ENABLE_VIDEO_GENERATION=true

# =====================================================
# COMPLIANCE & SECURITY
# =====================================================
ENABLE_AUDIT_LOGGING=true
PDPL_COMPLIANCE_MODE=true
HIPAA_COMPLIANCE_MODE=true
ENCRYPTION_KEY=GENERATE_32_BYTE_HEX_KEY_HERE
DATA_RETENTION_DAYS=2555  # 7 years for healthcare

# =====================================================
# LOCALIZATION
# =====================================================
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en
DEFAULT_CULTURAL_CONTEXT=saudi

# =====================================================
# MONITORING & OBSERVABILITY
# =====================================================
ENABLE_TELEMETRY=true
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project
SENTRY_ENVIRONMENT=production
POSTHOG_API_KEY=phc_your_posthog_key
POSTHOG_HOST=https://app.posthog.com

# Google Cloud Logging
GOOGLE_CLOUD_PROJECT=brainsait-prod
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# =====================================================
# PAYMENT (Production Stripe Keys)
# =====================================================
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
ENABLE_MADA=true
MADA_MERCHANT_ID=your_mada_merchant_id

# =====================================================
# RATE LIMITING
# =====================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=100

# =====================================================
# SSL/TLS
# =====================================================
SSL_CERTIFICATE_PATH=/etc/ssl/certs/brainsait.crt
SSL_KEY_PATH=/etc/ssl/private/brainsait.key

# =====================================================
# ENVIRONMENT
# =====================================================
NODE_ENV=production
PYTHON_ENV=production

# =====================================================
# BACKUP & DR
# =====================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_GCS_BUCKET=brainsait-prod-backups

# =====================================================
# GENERATE SECURE KEYS WITH:
# =====================================================
# openssl rand -base64 32  # For API_SECRET_KEY, JWT_SECRET
# openssl rand -hex 32     # For ENCRYPTION_KEY
# python -c "import secrets; print(secrets.token_urlsafe(32))"
